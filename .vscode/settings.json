{
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true,
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E402,F841,F401,E302,E305,W503"
    ],
    "autopep8.args": ["--max-line-length=120"],
    "pylint.args": [
        "--disable=C0111,W0718,E0606,C0413,C0207",
        "--max-line-length=120",
        "--ignored-modules=machine"
    ],
    "terminal.integrated.shellIntegration.enabled": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#4841a1",
        "titleBar.inactiveBackground": "#5a5691",
    },
    "cSpell.words": [
        "pyusb",
        "setuptools",
        "wireshark"
    ],
}